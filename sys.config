            {open_opts,[
                binary,
                % NB: {active, N} sends {udp_passive,Socket} to cb_mod cb module
                %     cb module as to then reply with {active, true | false | N},
                {active, 2}, % https://erldocs.com/current/kernel/inet.html#setopts/2
                {ip, {127,0,0,1}}
            ]},
            % gen_udp:recv Length
            {recv_len, 5}
        ]}
