        %% TCP IP Socket Server ( Ranch lib )
        {example_1,[
            {type, tcpv4},
            {cb_mod, inc_example_1_tcpipv4},
            {port, 9900},
            {num_acceptors, 10},
            % https://ninenines.eu/docs/en/ranch/1.4/guide/listeners/#_default_transport_options
            {socket_opts, [
                {packet, 2},
                {delay_send, false},
                {keepalive, true},
                {linger, {true, 1}},
                {show_econnreset, true},
                {active, once}
            ]}
        ]}
